<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_crypto_autotrade"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_300" >

        <ImageButton
            android:id="@+id/autotrade_goback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/chatroom_back"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:layout_marginLeft="2dp"
            android:scaleType="fitCenter"
            app:tint="@color/white"></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CRYPTO AUTOTRADE"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/toolbar_autotrade_title"
            android:textSize="17sp"
            />
    </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/autotrade_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:tabIndicatorColor="@color/blue_300"
            app:tabTextColor="@color/gray"
            app:tabSelectedTextColor="@color/blue_300"
            android:background="@color/white"
            >

        </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/autotrade_view_pager">
    </androidx.viewpager.widget.ViewPager>




</LinearLayout>